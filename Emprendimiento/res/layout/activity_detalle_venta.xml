<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalle_noticia"
    android:orientation="vertical"
    android:background="#fff">

 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/parte_de_arriba_registro"
        android:orientation="horizontal">
        
        
        <TextView
            android:id="@+id/tituloapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="70"
            android:gravity="center"
            android:text="Contactar vendedor"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="23sp"
             >

        </TextView>
        
        
    </LinearLayout>
   
   <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
   
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/background_detalle_venta">
        
        <TextView
            android:id="@+id/email_vendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/EjemploFecha"
            android:textColor="#96989a"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp">
        </TextView>
        
        <TextView
            android:id="@+id/tituVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/Noticias"
            android:textColor="#96989a"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" 
            android:layout_marginBottom="10dp"
            android:layout_weight="10">
        </TextView>
        <!--
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/imgNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_weight="70"
                android:src="@drawable/perfil_emprende" >

            </ImageView>

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLargeInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
