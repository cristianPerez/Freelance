<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70" >

        <Button
            android:id="@+id/button_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="20"
            android:background="@color/green1"
            android:onClick="item"
            android:text="Aliados\nclave"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_b"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="50"
                android:background="@color/green2"
                android:onClick="item"
                android:text="Actividades\nclave"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/button_c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="50"
                android:background="@color/green3"
                android:onClick="item"
                android:text="Recursos\nclave"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="20"
            android:background="@color/red"
            android:onClick="item"
            android:text="Propuesta\nde valor"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_e"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="50"
                android:background="@color/blue"
                android:onClick="item"
                android:text="RelaciÃ³n con\nel cliente"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/button_f"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="50"
                android:background="@color/violet"
                android:onClick="item"
                android:text="Canales contacto clientes"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_g"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="20"
            android:background="@color/cyan"
            android:onClick="item"
            android:text="Segmentos de clientes"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30" >

        <Button
            android:id="@+id/button_h"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="50"
            android:background="@color/orange"
            android:onClick="item"
            android:text="Estructura de costos"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button_i"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="50"
            android:background="@color/teal"
            android:onClick="item"
            android:text="Fuentes de ingresos"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>