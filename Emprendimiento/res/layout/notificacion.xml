<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/parte_de_arriba_registro"
        android:orientation="horizontal" >

        <ImageView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/boton_atras"
            android:layout_weight="15"
            android:onClick="atras">
        </ImageView>

        <TextView
            android:id="@+id/tituloapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="70"
            android:gravity="center"
            android:text="NotificaciÃ³n"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="23sp" >

        </TextView>

        <ImageView
            android:id="@+id/MenuInflado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/boton_opciones"
            android:layout_weight="15"
            android:onClick="atras">
        </ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Paso a la ultima interfaz"
        android:textSize="18dp"/>

</LinearLayout>
